{
  "name": "ractix",
  "private": false,
  "version": "0.1.20",
  "description": "Lightweight Reactive & Functional library core for building modern UI on the web",
  "homepage": "https://github.com/tuhuynh27/ractix",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuhuynh27/ractix.git",
    "directory": "packages/core"
  },
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "build:es": "tsc --declaration",
    "build:umd": "NODE_ENV=development parcel build src/index.ts --no-minify --out-dir=dist --out-file=ractix.js --no-source-maps --global Ractix --experimental-scope-hoisting",
    "build:umd:min": "NODE_ENV=production parcel build src/index.ts --out-dir=dist --out-file=ractix.min.js --no-source-maps --global Ractix --experimental-scope-hoisting --detailed-report",
    "build:es:module": "NODE_ENV=development parcel build src/index.ts --no-minify --out-dir=dist --out-file=ractix.es.js --no-source-maps",
    "build:es:module:min": "NODE_ENV=production parcel build src/index.ts --out-dir=dist --out-file=ractix.es.min.js --no-source-maps --detailed-report",
    "build": "rm -rf dist && npm run build:es && npm run build:umd && npm run build:umd:min && npm run build:es:module && npm run build:es:module:min",
    "build:dev": "rm -rf dist && npm run build:es"
  },
  "author": "Tu Huynh",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^26.0.16",
    "jest": "^26.6.3",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.29.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "browserslist": [
    "since 2017-06"
  ],
  "keywords": ["reactive", "ui", "web framwork", "web library", "reactive state", "reactive ui"]
}
